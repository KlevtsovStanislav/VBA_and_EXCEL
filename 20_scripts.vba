Sub CheckBEId()
'----------------------------------------------------------------------------------------------------------------------------
'Привязка Бизнес-сущности к полю\ям
'----------------------------------------------------------------------------------------------------------------------------
Set CallerBook = ThisWorkbook
Dim TimeStamp As String
'----------------------------------------------------------------------------------------------------------------------------
Debug.Print "Открытие соединения DSN" & Now()
Dim db As ADODB.Connection
Set db = New ADODB.Connection
db.ConnectionString = "DSN=TD_RDV"
db.Open
db.CommandTimeout = 0
'----------------------------------------------------------------------------------------------------------------------------
'Указатель на номер строки
'----------------------------------------------------------------------------------------------------------------------------
rownumber = 2
'----------------------------------------------------------------------------------------------------------------------------
Do While CallerBook.Worksheets("Привязка БС").Cells(rownumber, 1).Value <> ""
'----------------------------------------------------------------------------------------------------------------------------
'пока нет пустой строки
'----------------------------------------------------------------------------------------------------------------------------
PCOLUMN_ID = Worksheets("Привязка БС").Cells(rownumber, 1).Value               'ID поля
PBSN_ENT_NAME = Worksheets("Привязка БС").Cells(rownumber, 4).Value            'Наименование БС
PBSN_ENT_ID = Worksheets("Привязка БС").Cells(rownumber, 5).Value              'ID БС
'----------------------------------------------------------------------------------------------------------------------------
If PBSN_ENT_NAME <> "" Then
            SqlCode01 = "insert into PRD_DB_DMT.PLDM_COLUMN_LNK (COLUMN_ID,BSN_ENT_ID)" & Chr(10) & Chr(13) & _
                "values (" & PCOLUMN_ID & "," & PBSN_ENT_ID & ")"
            db.Execute (SqlCode01)
End If
'----------------------------------------------------------------------------------------------------------------------------
    rownumber = rownumber + 1
'----------------------------------------------------------------------------------------------------------------------------
Loop
'----------------------------------------------------------------------------------------------------------------------------
    Range("A2:D2").Select
    Range(Selection, Selection.End(xlDown)).Select
    Selection.ClearContents
'----------------------------------------------------------------------------------------------------------------------------
    Sheets("Привязка БС").Select
    Selection.ListObject.QueryTable.Refresh
'----------------------------------------------------------------------------------------------------------------------------
db.Close
End Sub


